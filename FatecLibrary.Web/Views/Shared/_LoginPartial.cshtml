<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="navtext nav-link navtext" href="#">Hello, @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="navtext nav-link navtext" asp-action="Logout" asp-controller="Home">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navtext nav-link navtext" asp-action="Login" asp-controller="Home">Login</a>
        </li>
    }
</ul>